<li data-transition="fade" data-slotamount="10" data-masterspeed="1500">
  <img src="{img}" alt="">
  <div class="tp-caption {color} border-v lft"
       data-x="540"
       data-y="center"
       data-speed="800"
       data-start="400"
       data-easing="easeInOutCubic"
       data-endspeed="300">
  </div>

  <div class="tp-caption {color} custom-font-1 lft"
       data-x="600"
       data-y="140"
       data-speed="800"
       data-start="1000"
       data-easing="easeInOutCubic"
       data-endspeed="300">
    {h1}
  </div>

  <div class="tp-caption lft {color} custom-font-2"
       data-x="600"
       data-y="190"
       data-speed="800"
       data-start="800"
       data-easing="easeInOutCubic">
    {h2}
  </div>

  <div class="tp-caption {color} sfb text-left"
       data-x="600"
       data-y="250"
       data-speed="800"
       data-start="1400"
       data-easing="easeInOutCubic">
    {text}
  </div>

  <div class="tp-caption {color} sfb text-left"
       data-x="600"
       data-y="310"
       data-speed="800"
       data-start="1600"
       data-easing="easeInOutCubic">
    {link}
  </div>
</li>