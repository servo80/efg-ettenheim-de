<li data-transition="fade" data-slotamount="10" data-masterspeed="1500">
  <img src="{img}" alt="">
  <div class="tp-caption {color} custom-font-1 lft"
       data-x="20"
       data-y="140"
       data-speed="800"
       data-start="400"
       data-easing="easeInOutCubic"
       data-endspeed="300">
    {h1}
  </div>

  <div class="tp-caption {color} sfr custom-font-2"
       data-x="20"
       data-y="190"
       data-speed="800"
       data-start="800"
       data-easing="easeInOutCubic">
    {h2}
  </div>

  <div class="tp-caption {color} sfb text-left custom-font-3"
       data-x="20"
       data-y="300"
       data-speed="800"
       data-start="1200"
       data-easing="easeInOutCubic">
    {text}
  </div>

  <div class="tp-caption {color} sfb text-left"
       data-x="20"
       data-y="360"
       data-speed="800"
       data-start="1600"
       data-easing="easeInOutCubic">
    {link}
  </div>
</li>